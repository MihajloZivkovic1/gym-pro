// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  email     String   @unique
  phone     String?
  firstName String   @map("first_name")
  lastName  String   @map("last_name")
  password  String?  // Add password field for authentication (nullable temporarily)
  role      UserRole @default(MEMBER)
  isActive  Boolean  @default(true) @map("is_active")
  qrCode    String?  @unique @map("qr_code") // Unique QR code for gym entry
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  
  // subscriptions
  subscribeToNewsletter     Boolean @default(true) @map("subscribe_to_newsletter")
  subscribeToNotifications  Boolean @default(false) @map("subscribe_to_notifications")

  // Relations
  memberships       Membership[]
  notifications     Notification[]
  payments          Payment[]
  processedPayments Payment[]    @relation("PaymentProcessor") // Payments processed by this admin

  @@map("users")
}

model MembershipPlan {
  id             String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name           String
  price          Decimal  @db.Decimal(10, 2)
  durationMonths Int      @map("duration_months")
  isActive       Boolean  @default(true) @map("is_active")
  description    String?  // Add description for the plan
  createdAt      DateTime @default(now()) @map("created_at")

  // Relations
  memberships Membership[]

  @@map("membership_plans")
}

model Membership {
  id              String                  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId          String                  @map("user_id") @db.Uuid
  planId          String                  @map("plan_id") @db.Uuid
  startDate       DateTime                @map("start_date") @db.Date
  endDate         DateTime                @map("end_date") @db.Date
  status          MembershipStatus        @default(ACTIVE)
  paymentStatus   MembershipPaymentStatus @default(PENDING) @map("payment_status")
  lastPaymentDate DateTime?               @map("last_payment_date") @db.Date
  nextPaymentDue  DateTime?               @map("next_payment_due") @db.Date
  notes           String?
  createdAt       DateTime                @default(now()) @map("created_at")
  updatedAt       DateTime                @updatedAt @map("updated_at")

  // Relations
  user     User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  plan     MembershipPlan  @relation(fields: [planId], references: [id])
  payments Payment[]

  @@map("memberships")
}

model Payment {
  id            String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  membershipId  String   @map("membership_id") @db.Uuid
  userId        String   @map("user_id") @db.Uuid
  amount        Decimal  @db.Decimal(10, 2)
  paymentDate   DateTime @default(now()) @map("payment_date") @db.Date
  paymentMethod String   @default("cash") @map("payment_method")
  monthsPaid    Int      @default(1) @map("months_paid")
  notes         String?
  processedBy   String?  @map("processed_by") @db.Uuid // Reference to admin user who processed payment
  createdAt     DateTime @default(now()) @map("created_at")

  // Relations
  membership Membership @relation(fields: [membershipId], references: [id], onDelete: Cascade)
  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  processor  User?      @relation("PaymentProcessor", fields: [processedBy], references: [id])

  @@map("payments")
}

model Notification {
  id           String           @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId       String           @map("user_id") @db.Uuid
  title        String
  message      String
  type         NotificationType
  isSent       Boolean          @default(false) @map("is_sent")
  scheduledFor DateTime         @map("scheduled_for")
  sentAt       DateTime?        @map("sent_at")
  createdAt    DateTime         @default(now()) @map("created_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("notifications")
}

// New Newsletter model for broadcast messages
model Newsletter {
  id            String            @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  title         String
  message       String
  type          NewsletterType
  priority      Priority          @default(MEDIUM)
  status        NewsletterStatus  @default(DRAFT)
  startDate     DateTime?         @map("start_date") @db.Date
  endDate       DateTime?         @map("end_date") @db.Date
  scheduledFor  DateTime?         @map("scheduled_for")
  sentAt        DateTime?         @map("sent_at")
  recipientCount Int              @default(0) @map("recipient_count")
  createdAt     DateTime          @default(now()) @map("created_at")
  updatedAt     DateTime          @updatedAt @map("updated_at")

  @@map("newsletters")
}

enum UserRole {
  ADMIN    // Full access - gym owner/manager
  STAFF    // Limited admin access - can check people in, view members
  MEMBER   // Standard gym member - view own info only

  @@map("user_role")
}

enum MembershipStatus {
  ACTIVE
  EXPIRED
  CANCELLED

  @@map("membership_status")
}

enum MembershipPaymentStatus {
  PAID
  PENDING
  OVERDUE
  PARTIAL

  @@map("membership_payment_status")
}

enum NotificationType {
  MEMBERSHIP_EXPIRING
  MEMBERSHIP_EXPIRED
  PAYMENT_REMINDER

  @@map("notification_type")
}

enum NewsletterType {
  CLOSURE
  MAINTENANCE
  EVENT
  GENERAL

  @@map("newsletter_type")
}

enum Priority {
  LOW
  MEDIUM
  HIGH

  @@map("priority")
}

enum NewsletterStatus {
  DRAFT
  SENT
  SCHEDULED

  @@map("newsletter_status")
}